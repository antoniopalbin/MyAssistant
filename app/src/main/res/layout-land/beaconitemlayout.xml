<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Device Addres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/device_address"
        android:layout_alignStart="@+id/device_name"
        android:layout_below="@+id/device_name" />


    <ImageView
        android:id="@+id/imgIcono"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/beacon" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgIcono"
        android:layout_toEndOf="@+id/imgIcono" />

    <TextView
        android:id="@+id/data_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Info"
        android:layout_below="@+id/device_address"
        android:layout_alignLeft="@+id/device_address"
        android:layout_alignStart="@+id/device_address" />

</RelativeLayout>