<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/beacon_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/beacon_room"
        android:layout_below="@+id/beacon_room"
        android:text="DescripciÃ³n" />

    <ImageView
        android:id="@+id/imgIcono"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/beacon"
        android:layout_alignBottom="@+id/beacon_description" />

    <TextView
        android:id="@+id/beacon_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgIcono"
        android:layout_toRightOf="@+id/imgIcono"
        android:text="Estancia"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/imageMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_alignBottom="@+id/beacon_description" />

</RelativeLayout>