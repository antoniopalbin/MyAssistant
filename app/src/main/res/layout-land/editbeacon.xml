<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="Datos de Beacon"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="DescripciÃ³n"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/InputDescripcion"
        android:layout_alignBottom="@+id/InputDescripcion"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/InputDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView10"
        android:layout_toEndOf="@+id/edit"
        android:layout_marginStart="54dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Estancia"
        android:textColor="@android:color/black"
        android:layout_below="@+id/InputDescripcion"
        android:layout_alignEnd="@+id/edit" />

    <EditText
        android:id="@+id/InputEstancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Estancia"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/InputDescripcion" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icono"
        android:textColor="@android:color/black"
        android:layout_above="@+id/btnGuardar"
        android:layout_alignEnd="@+id/textView12"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/InputEstancia"
        android:layout_marginBottom="33dp"
        android:background="@color/colorSencudary"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/InputEstancia"
        android:layout_alignEnd="@+id/InputEstancia" />


</RelativeLayout>